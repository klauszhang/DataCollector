<h2>User List</h2>



<div class="container">
    <div class="row">
        <div class="col-md-6">
            @Html.ActionLink("Back to User list", "Index", "Users", null, new { @class = "btn btn-default btn-sm" })
        </div>
    </div>

    <br />

    <table class="table table-hover">
        <tr>
            <th>Id</th>
            <th>User Name</th>
            <th></th>
        </tr>

        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>
                    @Html.ActionLink("Reactive", "Reactive", "Users", new { Id = user.Id }, new { @class = "btn btn-xs btn-warning" })
                </td>
            </tr>
        }
    </table>
</div>